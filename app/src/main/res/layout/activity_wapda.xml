<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".WapdaActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/blue"
        >

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wapda Meter Info"
            android:textSize="22sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_tenxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meter Number 1 info"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/meter_image"
        android:layout_below="@+id/top_layout"
        />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#F44336"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/tv_tenxth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meter Number 2 info"
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/meter_image"
        android:layout_below="@+id/top_layout"
        />

    <TextView
        android:id="@+id/tv_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:padding="10dp"
        android:textColor="#F44336"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_date_white"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/tv_DateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DateTime: "
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>

</LinearLayout>